<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="glasses" type="com.example.glassesshop.ui.home.GlassesModel"/>
    </data>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip" >

        <ImageView
            android:id="@+id/glasses_preview"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="glasses preview"
            android:src="@drawable/ic_baseline_attach_money_24" />

        <TextView
            android:id="@+id/glasses_cost"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/glasses_preview"
            android:maxLines="1"
            android:text="@{glasses.getCost()}"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/glasses_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/glasses_cost"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toEndOf="@id/glasses_preview"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{glasses.getName()}"
            android:textSize="16sp" />

    </RelativeLayout>

</layout>